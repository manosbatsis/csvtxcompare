<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="suggestions-tab" data-toggle="tab" href="#suggestions" role="tab" aria-controls="suggestions" aria-expanded="true">Suggestions</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="scores-tab" data-toggle="tab" href="#scores" role="tab" aria-controls="scores">Scores</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="suggestions" role="tabpanel" aria-labelledby="suggestions-tab">
  {{data-table data=model.suggestions
    searching=false
    paging=false
    ordering=client_recordNumber
    columns=(array
       (hash title="Client Record" property="client_recordNumber" visible=false)
       (hash title="Client Profile" property="client_profileName" visible=false)
       (hash title="Client Tx Date" property="client_transactionDate")
       (hash title="Client Tx Amount" property="client_transactionAmount")
       (hash title="Client Tx Narrative" property="client_transactionNarrative" visible=false)
       (hash title="Client Tx Desc" property="client_transactionDescription" visible=false)
       (hash title="Client Tx Id" property="client_transactionID" visible=false)
       (hash title="Client Tx Type" property="client_transactionType" visible=false)
       (hash title="Client Wallet" property="client_walletReference")
       (hash title="Score" property="score")
       (hash title="Tutuka Record" property="tutuka_recordNumber" visible=false)
       (hash title="Tutuka Profile" property="tutuka_profileName" visible=false)
       (hash title="Tutuka Tx Date" property="tutuka_transactionDate")
       (hash title="Tutuka Tx Amount" property="tutuka_transactionAmount")
       (hash title="Tutuka Tx Narrative" property="tutuka_transactionNarrative" visible=false)
       (hash title="Tutuka Tx Desc" property="tutuka_transactionDescription" visible=false)
       (hash title="Tutuka Tx Id" property="tutuka_transactionID" visible=false)
       (hash title="Tutuka Tx Type" property="tutuka_transactionType" visible=false)
       (hash title="Tutuka Wallet" property="tutuka_walletReference")
     )}}
  </div>
  <div class="tab-pane fade" id="scores" role="tabpanel" aria-labelledby="scores-tab">
    <table class="table table-hover table-responsive">
      <caption style="caption-side: top;">Matching scores between client (vertical)and tutuka (horizontal) records</caption>
      <thead>
        <tr>
          <th>Record #</th>
          {{#each model.tutukaMarkoff.mismatches as |tutukaMismatch|}}
            <th>{{tutukaMismatch.recordNumber}}</th>
          {{/each}}
        </tr>
      </thead>
      <tbody style="text-align: right">
        {{#each model.matchingScores as | rowScores clientIndex|}}
        <tr>
          <th>{{rowScores.[0].clientRecordNumber}}</th>
          {{#each rowScores as | score tutukaIndex|}}
            <td style="background-color: rgba(51, 153, 102, {{mult score.score 0.1}});">{{score.score}}</td>
          {{/each}}
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>




