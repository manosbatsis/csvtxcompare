
<div class="container">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Specify files to compare</h5>
    {{!-- submits a client/tutuka markoff files pair --}}
      <form role="form" enctype="multipart/form-data" method="post" id="fileinfo" {{action (route-action 'createPost') on='submit'}}>
        <div class="form-group row">
          <label for="clientMarkoffFile" class="col-2 col-form-label">Select client file</label>
          <div class="col-10">
            {{input type="file" name="clientMarkoffFile" id="clientMarkoffFile" class="form-control-file"}}
          </div>
        </div>
        <div class="form-group row">
          <label for="tutukaMarkoffFile" class="col-2 col-form-label">Select tutuka file</label>
          <div class="col-10">
            {{input type="file" name="tutukaMarkoffFile" id="tutukaMarkoffFile" class="form-control-file"}}
          </div>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Compare</button>
        </div>
      </form>
    </div>
  </div>
{{outlet}}
</div>
